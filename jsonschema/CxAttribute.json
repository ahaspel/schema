{
	"id": "https://congistics.com/schema/CxAttribute",
	"title": "com.congistics.cbrd.util.CxAttribute",
	"definitions": {
		"CxDependency": {
			"type": "object",
			"properties": {
				"ObjectType": {
					"type": "string"
				},
				"Ids": {
					"type": "array",
					"items": {
						"type": "integer"
					}
				}
			},
			"required": [
				"ObjectType",
				"Ids"
			]
		},
		"IxCustomProperty": {
			"superRequired": [
				"Id",
				"Name"
			],
			"type": "object",
			"properties": {
				"SupportedTypes": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"ActualTaskDay",
							"Allocation",
							"Employee",
							"Equipment",
							"Job",
							"JobActivity",
							"Material",
							"TimeSheet",
							"VirtualTaskDay"
						]
					}
				},
				"AttributeType": {
					"type": "string",
					"enum": [
						"String",
						"Int",
						"Double",
						"Lookup",
						"DateTime",
						"Boolean",
						"Date"
					]
				},
				"Dependencies": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/CxDependency"
					}
				},
				"ObjectType": {
					"type": "string",
					"enum": [
						"CustomProperty"
					]
				},
				"Id": {
					"type": "integer"
				},
				"Name": {
					"type": "string"
				},
				"Description": {
					"type": "string"
				},
				"DisplayName": {
					"type": "string"
				},
				"ForeColor": {
					"type": "string"
				},
				"BackColor": {
					"type": "string"
				}
			},
			"required": [
				"Id"
			],
			"immutable": [
				"DisplayName",
				"Dto"
			]
		},
		"IxDto": {
			"type": "object",
			"properties": {
				"ValidationStatus": {
					"type": "string",
					"enum": [
						"New",
						"Updated",
						"Deleted",
						"None",
						"SerializationFailure",
						"DatabaseFailure",
						"ValidationFailure"
					]
				},
				"ErrorMessage": {
					"type": "string"
				},
				"ErrorDetail": {
					"type": "string"
				},
				"IsValid": {
					"type": "boolean"
				}
			},
			"required": [
				"ValidationStatus",
				"ErrorMessage"
			]
		}
	},
	"immutable": [
		"DisplayName",
		"Name"
	],
	"type": "object",
	"properties": {
		"Id": {
			"type": "integer"
		},
		"Name": {
			"type": "string"
		},
		"Value": {
			"type": "string",
			"minLength": 1
		},
		"CustomProperty": {
			"$ref": "#/definitions/IxCustomProperty"
		},
		"Description": {
			"type": "string"
		}
	},
	"required": [
		"CustomProperty",
		"Id",
		"Value"
	]
}